<div class="panel panel-info content-container">
  <div class="panel-heading">
    <h3 class="panel-title">プロフィル</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-lg-3 " align="center">
        <% unless @user.avatar.url.nil? %>
          <%= image_tag @user.avatar.url, class: "image-profile" %>
        <% else %>
          <%= image_tag "profile.jpg", class: "image-profile" %>
        <% end %>
        <div class="clearfix"></div>
      </div>
      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-user-information">
          <tbody>
          <tr>
            <td>名前</td>
            <td><%= @user.name.nil? ? "なし" : @user.name %></td>
          </tr>
          <tr>
            <td>メール</td>
            <td><a href="mailto:<%= @user.email%>"><%= @user.email%></a></td>
          </tr>
          <tr>
            <td>生年月日</td>
            <td><%= @user.dob.nil? ? "なし" : @user.dob %></td>
          </tr>
          <tr>
            <td>性別</td>
            <td><%= @user.gender.nil? ? "確定なし" : @user.gender %></td>
          </tr>

          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% if current_user.id == @user.id %>
      <div class="panel-footer">
      <a href="<%= edit_user_registration_path(@user.id)%>" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit">修理</i></a>
  <% end %>
  </div>

 <!-- User items -->
  <div class="my-container" style="padding:30px; text-align:center">
    <div class="row">

      <div class="col-lg-12">
        <h1 class="page-header">批評した</h1>
      </div>
      <% @items.each do |item| %>
          <%= render 'users/user_review', item: item%>
      <% end %>
    </div>
  </div>
</div>