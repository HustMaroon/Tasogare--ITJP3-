<div class="login-page">
  <div class="login-form-box">
    <%= form_for(resource, as: resource_name, :html => {:class => 'login-form'}, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => "login-field form-control" %>
      </div>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, :class => "login-field form-control" %>
      </div>

      <div class="field">
        <%= f.label :gender%><br/>
        <%= f.select(:gender, ['Male','Female', "Gay", "Les"], {}, {:class => "form-control"})%>
      </div>

      <div class="field">
        <%= f.label :dob, 'Date of birth'%><br/>
        <%= f.text_field :dob, data:{provide: 'datepicker'}, :class => "login-field form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "login-field form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "login-field form-control" %>
      </div>

      <div class="field">
        <%= f.label :avatar%><br/>
        <%= f.file_field :avatar%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "login-button" %>
      </div>

      <br>

      <%= render "users/shared/links" %>
    <% end %>

  </div>
</div>


<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=1128353480545108";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>