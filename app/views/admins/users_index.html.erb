<% provide(:title, 'Users') %>

<div class="content-container">
  <table class="table table-bordered" style="margin-top: 20px;">
    <thead>
      <tr>
        <th>No.</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>Email</th>
        <th>Tools</th>
      </tr>
    </thead>
    <% @users.each_with_index do |user, index| %>
      <tbody>
        <%=render 'admins/user', user: user, index: index%>
      </tbody>      
    <% end %>
  </table>
</div>