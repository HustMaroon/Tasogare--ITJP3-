<div class="article-section container">

	<h1><%= @item.name %></h1>

	<div class="row">
		<div class="col-md-4 product-images">
			<img class="img-responsive" src="http://placehold.it/400x300" alt="">
		</div>
		<div class="col-md-8">
			<input id="star-input" class="rating rating-loading" value="3" data-size="sm" readonly="true">
			<p class="comment-count">12 comment(s)</p>
			<p class="spec-text">Specifications</p>
			<ul>
				<li>Brand: <%= @item.brand %></li>
				<li>Model: <%= @item.model %></li>
				<li>RAM: <%= @item.RAM %></li>
				<li>VGA: <%= @item.VGA %></li>
				<li>Disk: <%= @item.HDD %></li>
				<li>Screen: <%= @item.screen %></li>
				<li>OS: <%= @item.OS %></li>
				<li>Battery: <%= @item.PIN %></li>
				<li>Price: <%= @item.price %>$</li>
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<h3>Pros</h3>
			<p><%= @item.pros %></p>
		</div>
		<div class="col-md-4">
			<h3>Cons</h3>
			<p><%= @item.cons %></p>
		</div>
	</div>

	<div class="detailed-review-body">
			<p><%= @item.detail_review %></p>
	</div>
</div>

<script type="text/javascript">
	$('star-input').rating('update', @item.rate);
</script>