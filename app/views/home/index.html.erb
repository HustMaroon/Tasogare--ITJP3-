<script src="app/assets/javascripts/jquery.flexslider-min.js"></script>
<!--slider-->   
<div class="slider_container">
    <div class="flexslider">
        <ul class="slides">
        <%@slide_items.each do |item| %>
          <li>
            <a href="/items/<%=item['id']%>">
              <%=image_tag item.image%>
            </a>
            <div class="flex-caption">
              <div class="caption_title_line">
                <h2><a href="/items/<%=item['id']%>"><%=item.name%></a></h2>
                <p><%= truncate(item.detail_review, length: 500) %></p>
              </div>  
            </div>
          </li>
        <%end%>
      </ul>
    </div>
</div>
<!-- /.slider-->
<!-- Page Content -->
<div class="content-container container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">Top Ratings</h1>
    </div>
    <% @top_ratings.each do |item| %>
        <%= render 'home/top_rating_item', item: item%>
    <% end %>
  </div>

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">Top Newest</h1>
    </div>
    <% @top_newest.each do |item| %>
        <%= render 'home/top_newest_item', item: item%>
    <% end %>
  </div>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12">
        <p>Ez...</p>
      </div>
    </div>
  </footer>

</div>
<!-- /.container -->
<script type="text/javascript" src="js/jquery.flexslider-min.js"></script>

    <script type="text/javascript" charset="utf-8">

    var $ = jQuery.noConflict();

    $(window).load(function() {

    $('.flexslider').flexslider({

          animation: "fade"

    });

 

    $(function() {

        $('.show_menu').click(function(){

                $('.menu').fadeIn();

                $('.show_menu').fadeOut();

                $('.hide_menu').fadeIn();

        });

        $('.hide_menu').click(function(){

                $('.menu').fadeOut();

                $('.show_menu').fadeIn();

                $('.hide_menu').fadeOut();

        });

    });

  });


</script>
